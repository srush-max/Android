<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="city">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sounds in City"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="286dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="181dp"
                        android:layout_height="286dp"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/planeid"
                            android:layout_width="match_parent"
                            android:layout_height="253dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg"
                            android:scaleType="fitXY"
                            android:src="@drawable/plane"
                            android:contentDescription="plane sound"/>

                        <TextView
                            android:layout_width="181dp"
                            android:layout_height="33dp"
                            android:text="Airplane "
                            android:textAlignment="center"
                            android:textSize="20sp" />

                    </LinearLayout>
                    <View
                        android:layout_width="10dp"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:layout_width="181dp"
                        android:layout_height="286dp"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/constructionid"
                            android:layout_width="170dp"
                            android:layout_height="253dp"
                            android:background="@drawable/bg"
                            android:scaleType="fitXY"
                            android:src="@drawable/constructionimg"
                            android:contentDescription="construction sound"/>

                        <TextView
                            android:layout_width="181dp"
                            android:layout_height="33dp"
                            android:text="Construction site"
                            android:textAlignment="center"
                            android:textSize="20sp" />

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal">

                    <SeekBar
                        android:id="@+id/air_seekbar"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />

                    <SeekBar
                        android:id="@+id/constructio_seekbar"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="40dp" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="286dp"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="181dp"
                        android:layout_height="286dp"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/ambulanceid"
                            android:layout_width="match_parent"
                            android:layout_height="253dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg"
                            android:scaleType="fitXY"
                            android:src="@drawable/ambulance"
                            android:contentDescription="ambulance sound"
                            />
                        <TextView
                            android:layout_width="181dp"
                            android:layout_height="33dp"
                            android:text="Ambulance"
                            android:textAlignment="center"
                            android:textSize="20sp" />

                    </LinearLayout>



                    <View
                        android:layout_width="10dp"
                        android:layout_height="match_parent"/>
                    <LinearLayout
                        android:layout_width="181dp"
                        android:layout_height="286dp"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/streetid"
                            android:layout_width="170dp"
                            android:layout_height="257dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg"
                            android:scaleType="fitXY"
                            android:src="@drawable/street"
                            android:contentDescription="street  sound"/>

                        <TextView
                            android:layout_width="181dp"
                            android:layout_height="33dp"
                            android:text=" Busy Street"
                            android:textAlignment="center"
                            android:textSize="20sp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal">

                    <SeekBar
                        android:id="@+id/ambulance_seekbar"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"/>

                    <SeekBar
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/street_seekbar"
                        android:layout_marginStart="40dp"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="286dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="181dp"
                        android:layout_height="286dp"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/cafeid"
                            android:layout_width="wrap_content"
                            android:layout_height="257dp"
                            android:scaleType="fitXY"
                            android:layout_weight="1"
                            android:background="@drawable/bg"
                            android:src="@drawable/cafe"
                            android:contentDescription="cafe sound"/>

                        <TextView
                            android:layout_width="181dp"
                            android:layout_height="33dp"
                            android:text="Cafe"
                            android:textAlignment="center"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="10dp"
                        android:layout_height="match_parent"/>

                    <LinearLayout
                        android:layout_width="181dp"
                        android:layout_height="286dp"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/trainid"
                            android:layout_width="170dp"
                            android:layout_height="257dp"
                            android:scaleType="fitXY"
                            android:layout_weight="1"
                            android:background="@drawable/bg"
                            android:src="@drawable/train"
                            android:contentDescription="train sound"/>

                        <TextView
                            android:layout_width="181dp"
                            android:layout_height="33dp"
                            android:text="Train"
                            android:textAlignment="center"
                            android:textSize="20sp" />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal">

                    <SeekBar
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/cafe_seekbar"
                        android:layout_gravity="center"/>
                    <SeekBar
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/train_seekbar"
                        android:layout_marginStart="40dp"
                        android:layout_gravity="center"/>
                </LinearLayout>




            </LinearLayout>

        </ScrollView>


    </LinearLayout>

</LinearLayout>



