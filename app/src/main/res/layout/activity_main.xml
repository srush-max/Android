<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#3A3636">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relative"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
       android:background="#E91E63"

        android:layout_marginEnd="16dp">



        <TextView
            android:id="@+id/welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Soft Sonic"
            android:textSize="35sp"
            android:textStyle="italic"
            android:textColor="@color/white"
            android:textAlignment="center"/>


        <ImageView
            android:layout_width="35dp"
            android:id="@+id/menu_btn"
            android:layout_height="35dp"
            android:src="@drawable/baseline_dehaze_24"
            android:layout_alignEnd="@+id/welcome"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/sleepCD"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/scard"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_margin="16dp"
                        android:backgroundTint="#E91E63"
                        app:cardCornerRadius="40dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                           android:background="@drawable/sleep"
                            android:orientation="horizontal">



                                <TextView
                                    android:id="@+id/stextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="30dp"
                                    android:text="Sleep"
                                    android:textColor="@color/white"
                                    android:textSize="40sp"

                                    android:textStyle="bold" />



                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/ascard"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_margin="16dp"
                        app:cardCornerRadius="40dp"
                        app:cardElevation="4dp"
                        android:backgroundTint="#E91E63">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:orientation="horizontal"
                            android:background="@drawable/ac1">





                            <TextView
                                android:id="@+id/astextView"
                                android:layout_width="276dp"
                                android:layout_height="wrap_content"

                                android:layout_marginTop="30dp"
                                android:text="Acoustic"
                                android:textColor="@color/white"
                                android:textSize="40sp"
                                android:textStyle="bold" />

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>
                </LinearLayout>



                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/citycard"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_margin="16dp"
                        app:cardCornerRadius="40dp"
                        app:cardElevation="4dp"
                        android:backgroundTint="#E91E63">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:orientation="horizontal"
                            android:background="@drawable/city">




                            <TextView
                                android:id="@+id/ctextView"
                                android:layout_width="276dp"
                                android:layout_height="wrap_content"

                                android:layout_marginTop="30dp"
                                android:text="City Ambiance"
                                android:textColor="@color/white"
                                android:textSize="40sp"
                                android:textStyle="bold" />



                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>



                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/bcard"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_margin="16dp"
                        app:cardCornerRadius="40dp"
                        app:cardElevation="4dp"
                        android:backgroundTint="#E91E63">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:orientation="horizontal"
                            android:background="@drawable/birdsimg">



                                <TextView
                                    android:id="@+id/btextView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="30dp"
                                    android:text="Birds"
                                    android:textColor="@color/white"
                                    android:textSize="40sp"
                                    android:textStyle="bold" />


                            </LinearLayout>



                    </androidx.cardview.widget.CardView>

                </LinearLayout>




                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/fcard"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_margin="16dp"
                        app:cardCornerRadius="40dp"
                        app:cardElevation="4dp"
                        android:backgroundTint="#E91E63">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:orientation="horizontal"
                            android:background="@drawable/fantasyimg">



                                <TextView
                                    android:id="@+id/ftextView"
                                    android:layout_width="276dp"
                                    android:layout_height="wrap_content"

                                    android:layout_marginTop="30dp"
                                    android:text="Fantasy"
                                    android:textColor="@color/white"
                                    android:textSize="40sp"
                                    android:textStyle="bold" />

                            </LinearLayout>


                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView

                        android:id="@+id/ncard"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_margin="16dp"
                        app:cardCornerRadius="40dp"
                        app:cardElevation="4dp"
                        android:backgroundTint="#E91E63">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:orientation="horizontal"
                            android:background="@drawable/natureimg">


                            <TextView
                                android:id="@+id/ntextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="30dp"
                                android:text="Nature"
                                android:textColor="@color/white"
                                android:textSize="40sp"
                                android:textStyle="bold" />


                        </LinearLayout>



                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/tcard"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_margin="16dp"
                        app:cardCornerRadius="40dp"
                        app:cardElevation="4dp"
                        android:backgroundTint="#E91E63">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:orientation="horizontal"
                            android:background="@drawable/traditionalimg">



                            <TextView
                                android:id="@+id/ttextView"
                                android:layout_width="253dp"
                                android:layout_height="wrap_content"

                                android:layout_marginTop="30dp"
                                android:text="Traditional"
                                android:textColor="@color/white"
                                android:textSize="38sp"
                                android:textStyle="bold" />


                        </LinearLayout>



                    </androidx.cardview.widget.CardView>

                </LinearLayout>







                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/sycard"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_margin="16dp"
                        app:cardCornerRadius="40dp"
                        app:cardElevation="4dp"
                        android:backgroundTint="#E91E63">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:orientation="horizontal"
                            android:background="@drawable/synimg">




                                <TextView
                                    android:id="@+id/sytextView"
                                    android:layout_width="276dp"
                                    android:layout_height="wrap_content"

                                    android:layout_marginTop="30dp"
                                    android:text="Synthetic Noises"
                                    android:textColor="@color/white"
                                    android:textSize="40sp"
                                    android:textStyle="bold" />

                            </LinearLayout>



                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/mcard"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_margin="16dp"
                        app:cardCornerRadius="40dp"
                        app:cardElevation="4dp"
                        android:backgroundTint="#E91E63">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:orientation="horizontal"
                            android:background="@drawable/motivationimg">




                            <TextView
                                android:id="@+id/mtextView"
                                android:layout_width="276dp"
                                android:layout_height="wrap_content"

                                android:layout_marginTop="30dp"
                                android:text="Motivation "
                                android:textColor="@color/white"
                                android:textSize="40sp"
                                android:textStyle="bold" />

                        </LinearLayout>



                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/dcard"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_margin="16dp"
                        app:cardCornerRadius="40dp"
                        app:cardElevation="4dp"
                        android:backgroundTint="#E91E63">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:orientation="horizontal"
                            android:background="@drawable/dep">




                            <TextView
                                android:id="@+id/dtextView"
                                android:layout_width="276dp"
                                android:layout_height="wrap_content"

                                android:layout_marginTop="30dp"
                                android:text="Depression"
                                android:textColor="@color/white"
                                android:textSize="40sp"
                                android:textStyle="bold" />

                        </LinearLayout>



                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>





        </ScrollView>


    </LinearLayout>




</LinearLayout>